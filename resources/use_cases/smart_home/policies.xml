<?xml version="1.0" encoding="ISO-8859-1"?>
<Policies>
	<Policy Name="NotifyDoorbell" Modality="Obligation" Addressee="?d">
		<AddresseeRole>Doorbell(?d)</AddresseeRole>
		<Activation> Flat(?f), DoorbellOutput(?do), belongsTo(?d, ?f), producedBy(?do, ?d), Adult(?p), residesIn(?p, ?f)
		</Activation>
		<ActionDescription Var="?a"> SoundAction(?a)
		</ActionDescription>
		<Expiration> gotNotifiedFor(?p, ?do) </Expiration>
		<Cost>5.0</Cost>
	</Policy>
	<Policy Name="SleepingBaby" Modality="Prohibition" Addressee="?d">
		<AddresseeRole>Device(?d)</AddresseeRole>
		<Activation> Person(?p), SoundNotification(?t), disabledNotificationType(?p, ?t) </Activation>
		<ActionDescription Var="?a"> SoundAction(?a) </ActionDescription>
		<Expiration> Hall(?p) </Expiration>
		<Cost>8.0</Cost>
	</Policy>
</Policies>
